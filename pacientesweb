<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Pacientes</title>
  <style>
    body { font-family: sans-serif; padding: 20px; }
    input, button { margin: 5px; }
    .paciente { margin-bottom: 10px; }
  </style>
</head>
<body>
  <h2>Agregar Paciente</h2>
  <input id="nombre" placeholder="Nombre">
  <input id="edad" placeholder="Edad" type="number">
  <input id="diagnostico" placeholder="Diagnóstico">
  <button onclick="agregarPaciente()">Guardar</button>

  <h2>Lista de Pacientes</h2>
  <div id="lista"></div>

  <script>
    const lista = document.getElementById('lista');

    function cargarPacientes() {
      const pacientes = JSON.parse(localStorage.getItem('pacientes') || '[]');
      lista.innerHTML = '';
      pacientes.forEach((p, i) => {
        lista.innerHTML += `<div class="paciente">${p.nombre} - ${p.edad} años - ${p.diagnostico}</div>`;
      });
    }

    function agregarPaciente() {
      const nombre = document.getElementById('nombre').value;
      const edad = document.getElementById('edad').value;
      const diagnostico = document.getElementById('diagnostico').value;
      const pacientes = JSON.parse(localStorage.getItem('pacientes') || '[]');
      pacientes.push({ nombre, edad, diagnostico });
      localStorage.setItem('pacientes', JSON.stringify(pacientes));
      cargarPacientes();
    }

    cargarPacientes();
  </script>
</body>
</html>
